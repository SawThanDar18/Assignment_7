<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/startColor"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/width_4"
            android:layout_height="@dimen/height_5"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginLeft="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_4"
            android:layout_marginRight="@dimen/margin_4"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/black_panther" />

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:text="@string/show_lbl1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_4"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/movie_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_6"
            android:layout_marginLeft="@dimen/margin_6"
            android:layout_marginTop="@dimen/margin_3"
            android:text="@string/show_lbl2"
            android:textSize="@dimen/text_1"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/movie_name" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginLeft="@dimen/margin_3"
            android:text="-"
            app:layout_constraintBottom_toBottomOf="@+id/movie_type"
            app:layout_constraintStart_toEndOf="@+id/movie_type"
            app:layout_constraintTop_toTopOf="@+id/movie_type" />

        <TextView
            android:id="@+id/movie_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginLeft="@dimen/margin_3"
            android:text="@string/show_lbl3"
            android:textSize="@dimen/text_1"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/movie_imdb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:text="@string/show_lbl4"
            android:textColor="@color/white"
            android:textSize="@dimen/text_3"
            app:layout_constraintStart_toStartOf="@+id/movie_type"
            app:layout_constraintTop_toBottomOf="@+id/movie_type" />

        <TextView
            android:id="@+id/movie_rotten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_7"
            android:layout_marginLeft="@dimen/margin_7"
            android:text="@string/show_lbl5"
            android:textColor="@color/white"
            android:textSize="@dimen/text_3"
            app:layout_constraintBottom_toBottomOf="@+id/movie_imdb"
            app:layout_constraintStart_toEndOf="@+id/movie_imdb"
            app:layout_constraintTop_toTopOf="@+id/movie_imdb" />

        <TextView
            android:id="@+id/movie_metacritic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_7"
            android:layout_marginLeft="@dimen/margin_7"
            android:text="@string/show_lbl6"
            android:textColor="@color/white"
            android:textSize="@dimen/text_3"
            app:layout_constraintBottom_toBottomOf="@+id/movie_rotten"
            app:layout_constraintEnd_toEndOf="@+id/movie_duration"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/movie_rotten"
            app:layout_constraintTop_toTopOf="@+id/movie_rotten" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_lbl7"
            app:layout_constraintEnd_toEndOf="@+id/movie_imdb"
            app:layout_constraintStart_toStartOf="@+id/movie_imdb"
            app:layout_constraintTop_toBottomOf="@+id/movie_imdb" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_lbl8"
            app:layout_constraintEnd_toEndOf="@+id/movie_rotten"
            app:layout_constraintStart_toStartOf="@+id/movie_rotten"
            app:layout_constraintTop_toBottomOf="@+id/movie_rotten" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_lbl9"
            app:layout_constraintEnd_toEndOf="@+id/movie_metacritic"
            app:layout_constraintStart_toStartOf="@+id/movie_metacritic"
            app:layout_constraintTop_toBottomOf="@+id/movie_metacritic" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_2"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/shape"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="@string/show_lbl10"
            android:textColor="@color/white"
            android:textSize="@dimen/text_1"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/movie_name"
            app:layout_constraintStart_toStartOf="@+id/movie_name"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/width_1"
            android:layout_height="@dimen/height_1"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>